{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "pretty": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/ts/**/*"
  ]
}
